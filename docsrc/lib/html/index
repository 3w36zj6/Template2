[% TAGS star -%]
[%#
[* PROCESS misc/warning | trim | indent('  # ') *]
-%]
[% META book = '[* book.id *]'
        page = '[* page.id *]'
%]

[* IF book.intro -*]
<p>
[* book.intro *]
</p>
[* END -*]

[% WRAPPER ndx -%]
[* prefix = book.uplink ? "$book.uplink/" : '';
   FOREACH page = book.pages *]
[% WRAPPER ndxitem 
       link  = '[* prefix *][* page.html *]'
       name  = '[* page.name *]'
       title = '[* page.about *]'
-%]
[* page.intro *]
[% END %]
[* END *]
[% END %]

